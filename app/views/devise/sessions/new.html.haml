- title "sign in"
- breadcrumb :sign_in

.div_left
  %h2 Sign in

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %div
      = f.label :email
      %br
      = f.email_field :email

    %div
      = f.label :password
      %br
      = f.password_field :password

    %div
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label :remember_me

    = f.submit "Sign in"

  = render :partial => "devise/shared/links"

.div_right
  %h2 via ...
  %br
  %ul#sign_in_via
    %li
      %a.auth_provider{:href => '/auth/twitter'}
        = image_tag "twitter.png", :size => "32x32", :alt => "Twitter", :rel => "sign in via twitter"
    %li
      %a.auth_provider{:href => '/auth/github'}
        = image_tag "github.png", :size => "32x32", :alt => "GitHub", :rel => "or github"
    %li
      %a.auth_provider{:href => '/auth/vimeo'}
        = image_tag "vimeo.png", :size => "32x32", :alt => "Vimeo", :rel => "vimeo is also supported!"

.clear
